<LINK REL=StyleSheet HREF="/css/gimnasio/agregar.css" TYPE="text/css" MEDIA=screen>
<div id="img">
    <img src="/img/gimnasio.jpg">
</div>
<div id="gris">
    <label id="Inscripcion">Datos del Gimnasio</label>
</div>
<div id="contenido">
    <form action="/gimnasio/agregar/{{user.idUsuario}}" method="post">
        <div id="nombres">
            <label id="name">Nombre</label>
            <input type="text" name="nombre" id="cero" checked>
        </div>
        <div id="inscripciones">
            <label id="uno">Inscripci√≥n</label>
            <textarea name="inscripcion" id="descripcion" cols="30" rows="10" placeholder="Agregar texto"
                spellcheck="true" maxlength="600"></textarea>
        </div>
        <div id="mensualidades">
            <label id="dos">Mensualidad</label>
            <textarea name="mensualidad" id="mensualidad" cols="30" rows="10" placeholder="Agregar texto"
                spellcheck="true" maxlength="600"></textarea>
        </div>
        <div id="horarios">
            <label id="tres">Horarios</label>
            <textarea name="horario" id="horario" cols="30" rows="10" placeholder="Agregar texto" spellcheck="true"
                maxlength="15"></textarea>
        </div>
        <div id="bajas">
            <label id="cuatro">Bajas</label>
            <textarea name="bajas" id="baja" cols="30" rows="10" placeholder="Agregar texto" spellcheck="true"
                maxlength="600"></textarea>
        </div>
        <div id="higienes">
            <label id="cinco">Higiene</label>
            <textarea name="higiene" id="higiene" cols="30" rows="10" placeholder="Agregar texto" spellcheck="true"
                maxlength="600"></textarea>
        </div>
        <div id="seguridades">
            <label id="seis">Seguridad</label>
            <textarea name="seguridad" id="seguridad" cols="30" rows="10" placeholder="Agregar texto" spellcheck="true"
                maxlength="600"></textarea>
        </div>
        <div id="contactos">
            <label id="siete">Contactos</label>
            <input type="text" name="contacto" id="contacto" checked>
        </div>
        <div id="direcciones">
            <label id="ocho">Direcciones</label>
            <textarea name="direccion" id="direccion" cols="30" rows="10" placeholder="Agregar texto" spellcheck="true"
                maxlength="600"></textarea>
        </div>
        <div id="estados">
            <label id="nueve">Estados</label>
            <input type="text" name="estado" id="estado" value="abierto" readonly>
        </div>
        <div id="Boton1">
            <button type="submit" id="edita">Guardar</button>
        </div>
    </form>
</div>