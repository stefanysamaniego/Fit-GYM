<LINK REL=StyleSheet HREF="/css/login.css" TYPE="text/css" MEDIA=screen>
<div id="posicion">
    <img src="/img/icono.png" id="imagen">
</div>

<form action="/login" method="post">
    <div id= "contenedor">
        <div id="formulario">
            <div>
                <label id="Usuario">Nombre:</label>
                <input type="text" name="username" id="usuario">
            </div>
            <div>
                <label id="Contraseña">Contraseña:</label>
                <input type="password" name="password" id="contraseña">
            </div>
            <div>
                <button type="submit" id="boton">Ingresar</button>
            </div>
            <div>
                <a href="/registro">
                    Registrate
                </a>
            </div>
        </div>
    </div>
</form>