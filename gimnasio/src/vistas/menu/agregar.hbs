 <LINK REL=StyleSheet HREF="/css/menu/editar.css" TYPE="text/css" MEDIA=screen>
 
<div id="contenido">
    <form action="/menu/agregar" method="post">

        <label id="datos">Datos del Menú</label>

        <div id="nombres">
            <label id="uno">Nombre:</label>
            <input type="text" name="nombre" id="nombre" checked>
        </div>
        <div id="descripciones">
            <label id="dos">Descripción:</label>
            <textarea name="descripcion" id="descripcion" cols="30" rows="10" spellcheck="true" maxlength="2000"></textarea>
        </div>
        <div id="dias">
            <label id="tres">Días:</label>
            <input type="text" name="dias" id="dia" checked>
        </div>
        <div id="semanas">
            <label id="cuatro">Semanas:</label>
            <input type="text" name="semanas" id="semana" checked>
        </div>
        <div id="categorias">
            <label id="cinco">Categoria:</label>
            <select name="categoria" id="categoria" checked>
                {{#each lista}}
                    <option value="{{this.nombre}}">{{this.nombre}}</option>
                {{/each}}
            </select>
        </div>
        <div id="Boton1">
            <button type="submit" id="edita"><img src="/img/guardar.png" id="imagen1"></button>
        </div>
    </form>
</div>